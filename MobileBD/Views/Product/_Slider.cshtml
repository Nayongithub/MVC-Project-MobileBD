@model IEnumerable<MobileBD.Models.Product>


<div>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @{ int s = 0;}
            @foreach (var item in Model)
            {
                s++;
                var active = s == 1 ? "active" : "";
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="@active"></li>
            }

        </ol>
        <div class="carousel-inner" >
            @{ int i = 0;}
            @foreach (var item in Model)
            {
                i++;
                var active = i == 1 ? "active" : "";
                <div class="carousel-item @active">
                    <a class="card-link" href="@Url.Action("ProductDetails","Product",new { id=item.ProductID})">
                        <img class="d-block w-100" src=@Url.Content(item.Picture) alt="First slide" style="height:280px;width:720px">

                        <div class="carousel-caption d-none d-md-block">
                            <h5>@item.MobileFullName</h5>
                            <p style="color:#FDA66D">TK. @item.Price</p>
                        </div>
                    </a>
                </div>
            }

        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>



